        },
        "vocabulary": {
          "using_technology": [
            { "en": "call friends / family", "es": "llamar a amigos / familia" },
            { "en": "chat with friends / family", "es": "chatear con amigos / familia" },
            { "en": "listen to music", "es": "escuchar música" },
            { "en": "play games", "es": "jugar juegos" },
            { "en": "post photos / comments", "es": "publicar fotos / comentarios" },
            { "en": "read emails / messages", "es": "leer correos / mensajes" },
            { "en": "buy apps / games / music / movies", "es": "comprar apps / juegos / música / películas" },
            { "en": "leave voice messages / comments", "es": "dejar mensajes de voz / comentarios" },
            { "en": "send emails / text messages", "es": "enviar correos / mensajes de texto" },
            { "en": "use apps / social media", "es": "usar apps / redes sociales" },
            { "en": "watch movies / videos / TV", "es": "ver películas / videos / TV" }
          ],
          "prepositions_notes": [
            {
              "en": "chat with someone",
              "es": "chat with alguien (chatear con alguien)"
            },
            {
              "en": "listen to music",
              "es": "listen to música (escuchar música)"
            },
            {
              "en": "Don't use a preposition after call: I call my mom. (not: I call to my mom)",
              "es": "No uses preposición con call: I call my mom. (no: I call to my mom)"
            }
          ],
          "use_on_phrases": [
            { "en": "... on my computer / laptop", "es": "... en mi computadora / laptop" },
            { "en": "... on my cell phone / tablet", "es": "... en mi celular / tablet" },
            { "en": "... on my smartwatch", "es": "... en mi reloj inteligente" },
            { "en": "... on the internet", "es": "... en internet" },
            { "en": "... online", "es": "... en línea" }
          ]
        },
        "grammar": {
          "simple_present_yes_no_questions_i_you_we": {
            "title": {
              "en": "Simple present yes/no questions with I, you, we",
              "es": "Presente simple (preguntas sí/no) con I, you, we"
            },
            "rules": [
              { "en": "To make questions, use do + subject + base verb.", "es": "Para preguntas usa do + sujeto + verbo base." },
              { "en": "Short answers: Yes, I/you/we do. No, I/you/we don't.", "es": "Respuestas cortas: Yes, I/you/we do. No, I/you/we don't." }
            ],
            "formula": {
              "question": "Do + subject (I/you/we) + base verb?",
              "short_answers": "Yes, I/you/we do. / No, I/you/we don't."
            },
            "examples": [
              { "en": "Do you use social media?", "es": "¿Usas redes sociales?" },
              { "en": "Yes, I do.", "es": "Sí, uso." },
              { "en": "Do you and your friends send emails?", "es": "¿Tú y tus amigos envían correos?" },
              { "en": "No, we don't.", "es": "No, no enviamos." }
            ]
          }
        },
        "dialogue": {
          "title": { "en": "Phone plan", "es": "Plan de teléfono" },
          "lines": [
            {
              "speaker": "Clerk",
              "en": "What do you do on your phone? Do you call your friends?",
              "es": "¿Qué haces en tu teléfono? ¿Llamas a tus amigos?"
            },
            {
              "speaker": "Olivia",
              "en": "No. I chat with my friends, but I don't call them.",
              "es": "No. Chateo con mis amigos, pero no los llamo."
            }
          ]
        },
        "practice_prompts": [
          {
            "type": "survey",
            "en": "Write five survey questions about using technology. Then ask a friend or family member.",
            "es": "Escribe cinco preguntas de encuesta sobre cómo usas la tecnología. Luego pregúntale a un amigo o familiar."
          }
        ],
        "model_survey": [
          {
            "q": { "en": "Do you use social media every day?", "es": "¿Usas redes sociales todos los días?" },
            "a": { "en": "Yes, I do. I use Facebook and Instagram every day.", "es": "Sí. Uso Facebook e Instagram todos los días." }
          },
          {
            "q": { "en": "Do you play games on your phone?", "es": "¿Juegas en tu teléfono?" },
            "a": { "en": "No, I don't. I only use my phone for messages and calls.", "es": "No. Solo uso mi teléfono para mensajes y llamadas." }
          }
        ]
      },
