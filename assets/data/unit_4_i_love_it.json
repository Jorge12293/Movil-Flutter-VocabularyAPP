{
  "unit": {
    "id": "unit_4_i_love_it",
    "title": { "en": "I love it!", "es": "¡Me encanta!" },
    "overview": {
      "goals": [
        { "en": "Talk about your favorite things.", "es": "Hablar de tus cosas favoritas." },
        { "en": "Say how you use technology.", "es": "Decir cómo usas la tecnología." },
        { "en": "Talk about how you communicate.", "es": "Hablar de cómo te comunicas." },
        { "en": "Write a product review.", "es": "Escribir una reseña de producto." }
      ],
      "context_sentence": {
        "en": "The people are waiting to buy a new phone, because they really love it.",
        "es": "La gente está esperando para comprar un teléfono nuevo porque de verdad les encanta."
      }
    },
    "lessons": [
      {
        "id": "u4_l1",
        "title": { "en": "Favorite things", "es": "Cosas favoritas" },
        "focus": {
          "vocabulary": ["technology"],
          "grammar": ["simple_present_statements_i_you_we"]
        },
        "vocabulary": {
          "technology": [
            { "en": "apps", "es": "apps / aplicaciones" },
            { "en": "a camera", "es": "una cámara" },
            { "en": "a cell phone", "es": "un celular / teléfono móvil" },
            { "en": "earphones", "es": "audífonos" },
            { "en": "a game", "es": "un juego" },
            { "en": "a laptop", "es": "una laptop / portátil" },
            { "en": "a smartwatch", "es": "un reloj inteligente" },
            { "en": "a tablet", "es": "una tablet" }
          ]
        },
        "grammar": {
          "simple_present_statements_i_you_we": {
            "title": {
              "en": "Simple present statements with I, you, we",
              "es": "Presente simple (afirmaciones) con I, you, we"
            },
            "rules": [
              {
                "en": "Use the simple present for things that are generally true.",
                "es": "Usa presente simple para cosas que son generalmente verdad."
              },
              {
                "en": "After I/you/we, use the base verb. Don't use am/is/are before a simple present verb.",
                "es": "Después de I/you/we usa el verbo base. No uses am/is/are antes del verbo en presente simple."
              },
              {
                "en": "Use don't before the verb for negatives with I/you/we.",
                "es": "Usa don't antes del verbo para negativos con I/you/we."
              }
            ],
            "formula": {
              "affirmative": "Subject (I/you/we) + base verb",
              "negative": "Subject (I/you/we) + don't + base verb"
            },
            "examples": {
              "affirmative": [
                { "en": "I work in a hotel.", "es": "Trabajo en un hotel." },
                { "en": "You work in an office.", "es": "Trabajas en una oficina." },
                { "en": "We work in a restaurant.", "es": "Trabajamos en un restaurante." }
              ],
              "negative": [
                { "en": "I don't use a computer.", "es": "No uso una computadora." },
                { "en": "You don't work in an office.", "es": "No trabajas en una oficina." },
                { "en": "We don't work at the front of the hotel.", "es": "No trabajamos en la recepción del hotel." }
              ]
            }
          }
        },
        "sentence_patterns": [
          {
            "id": "likes_have_want",
            "label": { "en": "Likes / Have / Want", "es": "Gustos / Tener / Querer" },
            "templates": [
              { "en": "I like {noun}.", "es": "Me gusta {sustantivo}." },
              { "en": "I don't like {noun}.", "es": "No me gusta {sustantivo}." },
              { "en": "I have {noun}.", "es": "Tengo {sustantivo}." },
              { "en": "I don't have {noun}.", "es": "No tengo {sustantivo}." },
              { "en": "I want {noun}.", "es": "Quiero {sustantivo}." },
              { "en": "I don't want {noun}.", "es": "No quiero {sustantivo}." }
            ]
          }
        ],
        "practice_prompts": [
          {
            "type": "writing",
            "en": "Write two sentences about technology. Use I like… and I don't like…",
            "es": "Escribe dos oraciones sobre tecnología. Usa I like… y I don't like…"
          }
        ],
        "sample_answers": [
          { "en": "I like my cell phone and my apps.", "es": "Me gusta mi celular y mis apps." },
          { "en": "I don't like my laptop because it's very old.", "es": "No me gusta mi laptop porque es muy vieja." }
        ]
      },
      {
        "id": "u4_l2",
        "title": { "en": "My phone is my world", "es": "Mi teléfono es mi mundo" },
        "focus": {
          "vocabulary": ["using_technology"],
