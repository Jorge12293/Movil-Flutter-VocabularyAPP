            { "en": "take the subway", "es": "tomar el metro" },
            { "en": "carry (a bag / your books)", "es": "cargar / llevar (una bolsa / tus libros)" },
            { "en": "drive (your car)", "es": "conducir (tu carro)" },
            { "en": "go (to work / to a friend's house)", "es": "ir (al trabajo / a la casa de un amigo)" },
            { "en": "ride a bike", "es": "ir en bicicleta / montar bicicleta" },
            { "en": "wait (for the bus)", "es": "esperar (el bus)" },
            { "en": "walk", "es": "caminar" }
          ]
        },
        "grammar": {
          "present_continuous_questions": {
            "title": { "en": "Present continuous questions", "es": "Preguntas en presente continuo" },
            "yes_no_form": [
              { "en": "Are + you/we/they + verb-ing?", "es": "Are + you/we/they + verbo-ing?" },
              { "en": "Is + he/she/it + verb-ing?", "es": "Is + he/she/it + verbo-ing?" },
              { "en": "Am + I + verb-ing?", "es": "Am + I + verbo-ing?" }
            ],
            "wh_form": [
              {
                "en": "Question word + am/is/are + subject + verb-ing?",
                "es": "Palabra pregunta + am/is/are + sujeto + verbo-ing?"
              }
            ],
            "short_answers": [
              { "en": "Yes, I am. / No, I'm not.", "es": "Sí, sí. / No, no." },
              { "en": "Yes, he is. / No, he isn't.", "es": "Sí, él sí. / No, él no." },
              { "en": "Yes, they are. / No, they aren't.", "es": "Sí, ellos sí. / No, ellos no." }
            ],
            "examples": [
              { "en": "Are you waiting inside?", "es": "¿Estás esperando adentro?" },
              { "en": "Is she working late again?", "es": "¿Ella está trabajando tarde otra vez?" },
              { "en": "Am I at the right movie theater?", "es": "¿Estoy en el cine correcto?" },
              { "en": "Where is Mom meeting us?", "es": "¿Dónde nos está encontrando mamá?" }
            ]
          }
        },
        "conversation_templates": [
          {
            "id": "text_conversation_where_are_you",
            "label": { "en": "Text messages: Where are you?", "es": "Mensajes: ¿Dónde estás?" },
            "turns": [
              { "en": "Where are you right now?", "es": "¿Dónde estás ahora mismo?" },
              { "en": "I'm at the {place}.", "es": "Estoy en {place_es}." },
