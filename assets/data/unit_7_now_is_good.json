{
  "unit": {
    "id": "unit_7_now_is_good",
    "title": { "en": "Now is good", "es": "Ahora está bien" },
    "overview": {
      "goals": [
        { "en": "Talk about things happening now.", "es": "Hablar de cosas que están pasando ahora." },
        { "en": "Use the present continuous in statements and questions.", "es": "Usar el presente continuo en afirmaciones y preguntas." },
        { "en": "Talk about transportation while you’re moving.", "es": "Hablar de transporte mientras te mueves." },
        { "en": "Write a short blog post about what’s happening now (also/too).", "es": "Escribir un blog corto sobre lo que pasa ahora (also/too)." }
      ]
    },
    "lessons": [
      {
        "id": "u7_l1",
        "title": { "en": "A good time to call", "es": "Un buen momento para llamar" },
        "focus": {
          "vocabulary": ["activities_around_the_house"],
          "grammar": ["present_continuous_statements", "spelling_ing_rules"]
        },
        "vocabulary": {
          "activities_around_the_house": [
            { "en": "brush my hair", "es": "cepillarme el cabello" },
            { "en": "brush my teeth", "es": "cepillarme los dientes" },
            { "en": "clean the kitchen", "es": "limpiar la cocina" },
            { "en": "clean my room", "es": "limpiar mi cuarto" },
            { "en": "cook breakfast", "es": "cocinar el desayuno" },
            { "en": "cook dinner", "es": "cocinar la cena" },
            { "en": "do the dishes", "es": "lavar los platos" },
            { "en": "do my homework", "es": "hacer mi tarea" },
            { "en": "help somebody with something", "es": "ayudar a alguien con algo" },
            { "en": "take a bath", "es": "tomar un baño" },
            { "en": "take a shower", "es": "tomar una ducha" },
            { "en": "wash my hair", "es": "lavarme el cabello" }
          ]
        },
        "grammar": {
          "present_continuous_statements": {
            "title": { "en": "Present continuous statements", "es": "Afirmaciones en presente continuo" },
            "use": [
              {
                "en": "Use it for things happening right now.",
                "es": "Úsalo para cosas que están pasando ahora mismo."
              },
              {
                "en": "Use it for things happening around now (these days / this year).",
                "es": "Úsalo para cosas que están pasando “por estos días” (este año / estos días)."
              }
            ],
            "form": {
              "affirmative": { "en": "am/is/are + verb-ing", "es": "am/is/are + verbo-ing" },
              "negative": { "en": "am/is/are + not + verb-ing", "es": "am/is/are + not + verbo-ing" }
            },
            "examples": [
              { "en": "I'm cooking breakfast right now.", "es": "Estoy cocinando el desayuno ahora mismo." },
              { "en": "They're not doing the dishes.", "es": "Ellos no están lavando los platos." },
              { "en": "I'm learning a lot of English this year.", "es": "Estoy aprendiendo mucho inglés este año." }
            ]
          },
          "spelling_ing_rules": {
            "title": { "en": "Spelling changes with -ing", "es": "Cambios de ortografía con -ing" },
            "rules": [
              {
                "en": "CVC (one syllable): double the last consonant + -ing (stop → stopping).",
                "es": "CVC (una sílaba): duplica la última consonante + -ing (stop → stopping)."
              },
              {
                "en": "Ends in -e: drop -e + -ing (take → taking).",
                "es": "Termina en -e: quita la -e + -ing (take → taking)."
              }
            ],
            "examples": [
              { "en": "put → putting", "es": "put → putting" },
              { "en": "stop → stopping", "es": "stop → stopping" },
              { "en": "come → coming", "es": "come → coming" },
              { "en": "take → taking", "es": "take → taking" }
            ]
          }
        },
        "sentence_patterns": [
          {
            "id": "present_continuous_house",
            "label": { "en": "Talking about what people are doing now", "es": "Decir qué están haciendo ahora" },
            "templates": [
              { "en": "I'm {verb_ing} right now.", "es": "Estoy {verbo_ando_endo} ahora mismo." },
              { "en": "He/She is {verb_ing}.", "es": "Él/Ella está {verbo_ando_endo}." },
              { "en": "They are {verb_ing}.", "es": "Ellos/Ellas están {verbo_ando_endo}." },
              { "en": "I'm not {verb_ing}.", "es": "No estoy {verbo_ando_endo}." },
              { "en": "He/She isn't {verb_ing}.", "es": "Él/Ella no está {verbo_ando_endo}." },
              { "en": "They aren't {verb_ing}.", "es": "Ellos/Ellas no están {verbo_ando_endo}." }
            ]
          }
        ],
        "practice_prompts": [
          {
            "type": "speaking",
            "en": "Imagine your family is at home and busy. Say what everyone is doing now.",
            "es": "Imagina que tu familia está en casa y ocupada. Di qué está haciendo cada uno ahora."
          }
        ]
      },
