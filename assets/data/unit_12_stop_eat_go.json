      {
        "id": "u12_l3",
        "title": { "en": "Please pass the butter", "es": "Por favor, pásame la mantequilla" },
        "focus": {
          "functional_language": ["offering_requesting_food_drink"],
          "strategy": ["so_really_stronger"],
          "pronunciation": ["h_r_sounds"]
