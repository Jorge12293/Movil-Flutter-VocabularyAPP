      {
        "id": "u12_l2",
        "title": { "en": "What did you eat?", "es": "¿Qué comiste?" },
        "focus": { "vocabulary": ["food_drinks_desserts"], "grammar": ["simple_past_questions", "some_any"] },
        "vocabulary": {
          "food_drinks_desserts": {
            "food": [
              { "en": "black beans", "es": "fréjoles negros" },
              { "en": "green beans", "es": "vainitas / ejotes" },
              { "en": "eggs", "es": "huevos" },
              { "en": "fish", "es": "pescado" },
              { "en": "rice", "es": "arroz" },
              { "en": "steak", "es": "bistec" },
              { "en": "pizza", "es": "pizza" }
            ],
            "drinks": [
              { "en": "juice", "es": "jugo" },
              { "en": "soda", "es": "gaseosa" },
              { "en": "water", "es": "agua" }
            ],
            "desserts": [
              { "en": "ice cream", "es": "helado" },
              { "en": "chocolate cake", "es": "pastel de chocolate" }
            ]
          }
        },
        "grammar": {
          "simple_past_questions": {
            "title": { "en": "Simple past questions", "es": "Preguntas en pasado simple" },
            "yes_no": {
              "rule_en": "Did + subject + base verb …?",
              "rule_es": "Did + sujeto + verbo base …?",
              "examples": [
                { "en": "Did you like the food?", "es": "¿Te gustó la comida?" },
                { "en": "Did you have dessert?", "es": "¿Comiste postre?" }
              ],
              "short_answers": [
                { "en": "Yes, I did. / No, I didn’t.", "es": "Sí. / No." }
              ]
            },
            "information": {
              "rule_en": "Question word + did + subject + base verb …?",
              "rule_es": "Pregunta + did + sujeto + verbo base …?",
              "examples": [
                { "en": "What did you eat?", "es": "¿Qué comiste?" },
                { "en": "Where did you eat?", "es": "¿Dónde comiste?" },
                { "en": "What did you drink?", "es": "¿Qué tomaste?" },
                { "en": "When did you go?", "es": "¿Cuándo fuiste?" }
              ]
            }
          },
          "some_any": {
            "title": { "en": "\"Some\" and \"any\"", "es": "\"Some\" y \"any\"" },
            "rules": [
              { "en": "Use some in affirmative statements: I had some soup.", "es": "Usa some en afirmativas: I had some soup." },
              { "en": "Use any in yes/no questions and negative statements: Did you have any dessert? / I didn’t have any juice.", "es": "Usa any en preguntas sí/no y negativas: Did you have any dessert? / I didn’t have any juice." }
            ],
            "examples": [
              { "en": "Did you eat any vegetables?", "es": "¿Comiste algunas verduras?" },
              { "en": "No, I didn’t eat any vegetables.", "es": "No, no comí nada de verduras." }
            ]
          }
        },
        "mini_practice": [
          {
            "type": "dialogue_drill",
            "prompt_en": "Answer as if you were in a restaurant yesterday.",
            "prompt_es": "Responde como si ayer hubieras estado en un restaurante.",
