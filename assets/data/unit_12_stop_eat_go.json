        "functional_language": {
          "offering_requesting_food_drink": {
            "offers": [
              { "en": "Do you want some …?", "es": "¿Quieres …?" },
              { "en": "Would you like some …?", "es": "¿Te gustaría …?" },
              { "en": "Here you go.", "es": "Aquí tienes." }
            ],
            "requests": [
              { "en": "Please pass the butter.", "es": "Por favor, pásame la mantequilla." },
              { "en": "Can I have some water, please?", "es": "¿Me da un poco de agua, por favor?" },
              { "en": "Could I have …, please?", "es": "¿Podría darme …, por favor?" }
            ],
            "responses": [
              { "en": "Sure.", "es": "Claro." },
              { "en": "Of course.", "es": "Por supuesto." },
              { "en": "Sorry, we don’t have any.", "es": "Perdón, no tenemos." },
              { "en": "No, thanks.", "es": "No, gracias." }
            ]
          }
        },
        "strategy": {
          "so_really_stronger": {
            "rule_en": "Use so / really to make words stronger (informal speaking).",
            "rule_es": "Usa so / really para hacer las palabras más fuertes (habla informal).",
            "examples": [
              { "en": "The food was really good.", "es": "La comida estuvo realmente buena." },
              { "en": "I was so hungry!", "es": "¡Tenía tanta hambre!" }
            ]
          }
        },
        "pronunciation": {
          "h_r_sounds": {
            "tips": [
              { "en": "/h/ has air (hot, hungry, hotel).", "es": "/h/ lleva aire (hot, hungry, hotel)." },
              { "en": "/r/ is strong in English (rice, restaurant, really).", "es": "/r/ es fuerte en inglés (rice, restaurant, really)." }
            ],
            "practice_words": [
              { "en": "hungry", "es": "hungry" },
              { "en": "hotel", "es": "hotel" },
              { "en": "rice", "es": "rice" },
              { "en": "really", "es": "really" }
            ]
          }
        }
